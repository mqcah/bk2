<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to relationship_path(user),method: :delete,class:"btn btn-primary" do%>
フォローを外す
    <% end %>
  <% else %>
    <%= link_to relationships_path(user),method: :post,class:"btn btn-success" do%>
      フォローする
    <% end %>
  <% end %>
<% end %>