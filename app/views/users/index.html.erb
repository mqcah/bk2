<div class="container">

<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= render 'profile', user: current_user %>

<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>

<div class="col-xs-9">
<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
            <th class="col-xs-2">image</th>
            <th class="col-xs-4">name</th>
            <th class="col-xs-6 ml-5"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td class="col-xs-2"><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td class="col-xs-4"><%= user.name %></td>
			<td class="col-xs-6"><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--users一覧 -->
</div>
</div>
</div>	
